citHeader("To cite polyAinv in publications use:")

citEntry(entry = "Article",
  title        = "Computation of the inverse additive relationship matrix for autopolyploid and multiple-ploidy populations",
  author       = personList(as.person("Matthew G. Hamilton"),
  as.person("Richard J. Kerr")),
  journal      = "Theoretical and Applied Genetics",
  year         = "2018",
  volume       = "131",
  number       = "4",
  pages        = "851–860",
  url          = "http://link.springer.com/article/10.1007/s00122-017-3041-y",

  textVersion  =
  paste("Hamilton and Kerr (2018)",
        "Computation of the inverse additive relationship matrix for autopolyploid and multiple-ploidy populations.",
        "Theoretical and Applied Genetics 131:851–860")
)
